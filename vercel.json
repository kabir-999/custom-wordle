{
  "version": 2,
  "name": "custom-wordle",
  "public": true,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" },
    { "src": "hallowen_bg.jpg", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/styles.css",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/script.js",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/hallowen_bg.jpg",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

